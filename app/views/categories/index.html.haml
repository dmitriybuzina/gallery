  .column
  - @categories.each_slice(4) do |array_category|
    - array_category.each do |category|
      .container-category
        = link_to image_tag('London/download (2).jpeg', class: 'category-image'), category_path(category)
        .center
          .text
            = link_to category.name, category_path(category)
        .middle
          .text
            = link_to '', edit_category_path(category), class: 'glyphicon glyphicon-pencil'
            = link_to '', category, method: :delete, class: 'glyphicon glyphicon-remove'
            - if current_user.following?(category)
              = link_to image_submit_tag('red.png', width: "20", height: "20"), delete_follower_category_path(category), method: :delete
            - else
              = link_to image_submit_tag('green.png', width: "20", height: "20"), new_follower_category_path(category), method: :post

