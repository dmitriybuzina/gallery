%nav.navbar.navbar-default
  .containter-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ type: :button, 'data-toggle' => :collapse, 'data-target' => "#bs-example-navbar-collapse-1" }
      = link_to 'Gallery', root_path, class: 'navbar-brand'

    / Navbar content
    .collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav.navbar-right
        / Sample dropdown
        %li.dropdown
          = link_to categories_path, 'data-toggle' => 'dropdown', 'role' => 'button', 'aria-expanded' => 'false', 'class' => 'dropdown-toggle' do
            Categories
            %span.caret
          %ul.dropdown-menu{ role: :menu }
            - top_categories.each do |category|
              %li= link_to(category.name, category_path(category))
            %li.divider
            %li= link_to('All categories', categories_path)

        / Sample links
        - if user_signed_in?
          %li= link_to('Logout', destroy_user_session_path, method: :delete)
        - else
          %li= link_to('Login', new_user_session_url)
        %li= link_to('Images', images_index_path)
        -if(current_user)
          %li= link_to('Profile', edit_user_registration_path)



