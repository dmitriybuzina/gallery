    -#    -if(category.main_image)
    -#      .welcome-category
    -#        = link_to image_tag(category.main_image, class: 'img-category-welcome'), category_path(category)
    -#        .name-welcome-category
    -#          %h1.centered
    -#            = link_to category.name, category_path(category)
    %h1.txt
      =t('welcome.images')
    .welcome-images
      - @images.each do |image|
        .welcome-image
          .col-12.col-md-3.col-sm-6
            =link_to image_tag(image.file.url, size: '250x220'), category_image_path(category_id: image.category, id: image.id)

  .third-page
    %h1.centered
      =t('welcome.more and more')




