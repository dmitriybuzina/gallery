#carouselExampleIndicators.carousel.slide{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#carouselExampleIndicators"}
    %li{"data-slide-to" => "1", "data-target" => "#carouselExampleIndicators"}
    %li{"data-slide-to" => "2", "data-target" => "#carouselExampleIndicators"}
    %li{"data-slide-to" => "3", "data-target" => "#carouselExampleIndicators"}
    %li{"data-slide-to" => "4", "data-target" => "#carouselExampleIndicators"}
  .carousel-inner
    .welcome-info
      .back
        %h1
          AWESOME GALLERY
        %p
          go in with us
    .carousel-item.active
      =image_tag('back3.jpg', class: 'welcome-image')
    .carousel-item
      =image_tag('back4.jpg', class: 'welcome-image')
    .carousel-item
      =image_tag('back5.jpg', class: 'welcome-image')
    .carousel-item
      =image_tag('back6.jpg', class: 'welcome-image')
    .carousel-item
      =image_tag('back7.jpg', class: 'welcome-image')
  %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselExampleIndicators", :role => "button"}
  %a.carousel-control-next{"data-slide" => "next", :href => "#carouselExampleIndicators", :role => "button"}

.second-page
  %h1.txt
    Categories
  .welcome-categories
    - @categories.each do |category|
      -if(category.main_image)
        .welcome-category.row-3
          = link_to image_tag(category.main_image, size: '250x250'), category_path(category)
          -#.name-welcome-category
          -#  = link_to category.name, category_path(category)

.third-page
  .content
    %h1
      We have a huge number of images and you can add your own!

.fourth-page
  =image_tag('back2.jpg', class: 'welcome-image')
  .content
    %h1
      Choose us!
      %br/
    .border-signup
      =link_to('Sign up', new_user_registration_path)



