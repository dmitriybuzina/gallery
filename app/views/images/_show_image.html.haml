.container-image
  .image
    = image_tag(@image.file.url, style: 'width: 70%; height: 45%')
  .container-comment-form
    -if @image.is_liked(current_user.id)
      = link_to image_tag('heart_red.png'), delete_like_category_image_path(user_id: current_user.id, image_id: @image.id), method: :delete, remote: true
      = @image.count_likes
    -else
      = link_to image_tag('heart.png'), new_like_category_image_path(category_id: @image.category_id), method: :post, remote: true
      = @image.count_likes
    = render 'comments/comment', image: @image
    = render 'comments/form'