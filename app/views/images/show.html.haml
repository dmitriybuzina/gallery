.container-image
  %p
    = image_tag(@image.file.url, size: "480x300")
  %p
    -if @image.is_liked(current_user.id)
      = link_to image_tag('heart_red.png'), delete_like_category_image_path(user_id: current_user.id, image_id: @image.id), method: :delete, remote: true, class: "glyphicon glyphicon-heart"
      = @image.count_likes
    -else
      = link_to image_tag('heart.png'), new_like_category_image_path(category_id: @image.category_id), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty"
      = @image.count_likes
    = render 'comments/form'
    = render 'comments/comment', image: @image
