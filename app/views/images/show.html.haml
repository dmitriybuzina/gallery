.col-sm-2
  %p
    = image_tag(@image.file.url)
  %p
    -if @image.is_liked(current_user)
      = link_to '', delete_like_category_image_path(user_id: current_user.id, image_id: @image.id), method: :delete, remote: true, class: "glyphicon glyphicon-heart"
      = @image.count_likes
    -else
      = link_to '', new_like_category_image_path(category_id: @image.category_id), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty"
      = @image.count_likes
    = render 'comments/form'
    = render 'comments/comment', image: @image